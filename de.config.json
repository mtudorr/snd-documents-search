{
    "environmentStable": [
        {
            "awsAccountId": "787554509201",
            "awsRegion": "eu-central-1",
            "label": "stg",
            "branch": "develop",
            "environmentVariables": {
                "DOTNET_BUILD_CONFIGURATION": "Release"
            },
            "environmentSecrets": [
                "SONAR_TOKEN"
            ]
        }
    ],
    "environmentFeature": {
        "awsAccountId": "787554509201",
        "awsRegion": "eu-central-1",
        "environmentVariables": {
            "DOTNET_BUILD_CONFIGURATION": "Debug"
        },
        "environmentSecrets": [
            "SONAR_TOKEN"
        ]
    },
    "pipeline": {
        "stages": [
            {
                "id": "Build",
                "steps": [
                    {
                        "action": "install",
                        "commands": [
                            "dotnet tool install --global dotnet-sonarscanner"
                        ]
                    },
                    {
                        "action": "pre_build",
                        "commands": [
                            "dotnet sonarscanner begin /k:\"mtudorr_snd-documents-search\" /o:\"mtudorr\" /d:sonar.token=\"$SONAR_TOKEN\" /d:sonar.host.url=\"https://sonarcloud.io\""
                        ]
                    },
                    {
                        "action": "build",
                        "commands": [
                            "dotnet build ./search-service/src/SearchService.sln -c $DOTNET_BUILD_CONFIGURATION"
                        ]
                    },
                    {
                        "action": "post_build",
                        "commands": [
                            "dotnet sonarscanner end /d:sonar.token=\"$SONAR_TOKEN\""
                        ]
                    }
                ],
                "outputFiles": [
                    "**/*"
                ]
            },
            {
                "id": "Deploy",
                "idOfInputStage": "Build",
                "steps": [
                    {
                        "action": "install",
                        "commands": [
                            "npm ci"
                        ]
                    },
                    {
                        "action": "build",
                        "commands": [
                            "cd search-service",
                            "npx cdk deploy *-SearchServiceDeployStack --context env=$ENV --require-approval never"
                        ]
                    }
                ]
            }
        ]
    }
}