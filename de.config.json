{
    "environmentStable": [
        {
            "awsAccountId": "787554509201",
            "awsRegion": "eu-central-1",
            "label": "stg",
            "branch": "develop",
            "environmentVariables": {
                "DOTNET_BUILD_CONFIGURATION": "Release"
            }
        }
    ],
    "environmentFeature": {
        "awsAccountId": "787554509201",
        "awsRegion": "eu-central-1",
        "environmentVariables": {
            "DOTNET_BUILD_CONFIGURATION": "Debug"
        }
    },
    "pipeline": {
        "stages": [
            {
                "id": "Build",
                "steps": [
                    {
                        "action": "build",
                        "commands": [
                            "dotnet build ./search-service/src/SearchService.sln -c $DOTNET_BUILD_CONFIGURATION"
                        ]
                    }
                ],
                "outputFiles": [
                    "**/*"
                ]
            },
            {
                "id": "Deploy",
                "idOfInputStage": "Build",
                "steps": [
                    {
                        "action": "install",
                        "commands": [
                            "npm ci"
                        ]
                    },
                    {
                        "action": "build",
                        "commands": [
                            "cd search-service",
                            "npx cdk deploy *-SearchServiceDeployStack --context env=$ENV --require-approval never"
                        ]
                    }
                ]
            }
        ]
    }
}